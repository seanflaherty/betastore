<h1>Products</h1>

<p><%= link_to "New Product", new_admin_product_path %></p>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Created At</th>
  </tr>
   <% for product in @products %>
    <tr>
      <td><%= link_to product.id, admin_product_path(product) %></td>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= number_to_currency product.price %></td>
      <td><%= time_ago_in_words product.created_at %> ago</td>
      <td><%= product.created_at.strftime('%A, %B %d, %Y') %></td>
    </tr>
  <% end %>
</table>