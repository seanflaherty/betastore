<h1><%= @customer.name %></h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>State Code</th>
    <th>Zip Code</th>
    <th>Updated At</th>
    <th>Created At</th>
  </tr>
    <tr>
      <td><%= @customer.id %></td>
      <td><%= @customer.name %></td>
      <td><%= @customer.email %></td>
      <td><%= @customer.state_code %></td>
      <td><%= @customer.zip_code %></td>
      <td><%= @customer.updated_at %></td>
      <td><%= @customer.created_at %></td>
    </tr>
  </table>    

  <p>
  <%= link_to "Edit Customer", edit_admin_customer_path(@customer) %>
  |
  <%= link_to "Delete Customer", admin_customer_path(@customer), 
              method: 'delete', 
              data: { confirm: 'Are you sure you want to delete this Customer?'} %>
  |
  <%= link_to "Back to Customers List", admin_customers_path(@customer) %>
  </p>