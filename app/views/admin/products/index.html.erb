<h1>Products</h1>

<p><%= link_to "Add New Product", new_admin_product_path, class:'btn btn btn-primary' %></p>

<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Modified</th>
    <th>Created</th>
    <th>Edit/Delete<th>
  </tr>
   <% for product in @products %>
    <tr>
      <td><%= link_to product.id, admin_product_path(product) %></td>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= number_to_currency product.price %></td>
      <td><%= time_ago_in_words product.created_at %> ago</td>
      <td><%= product.created_at.strftime('%A, %B %d, %Y') %></td>
      <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_admin_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          admin_product_path(product),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>
